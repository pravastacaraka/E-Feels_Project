<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- EditText hint color -->
        <item name="android:textColorHint">@android:color/white</item>
        <!-- TextInputLayout text color -->
        <item name="colorControlActivated">@android:color/white</item>
        <!-- EditText line color when EditText on focus -->
        <item name="colorControlHighlight">@android:color/white</item>
        <!-- EditText line color when EditText on unfocus -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="AppTheme.LoginRegister" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WifiList" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Profile" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>